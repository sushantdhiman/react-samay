{
  "name": "react-samay",
  "version": "3.0.0",
  "description": "Time picker for React.js",
  "homepage": "https://github.com/sushantdhiman/react-samay",
  "repository": {
    "type": "git",
    "url": "https://github.com/sushantdhiman/react-samay"
  },
  "type": "module",
  "license": "MIT",
  "source": "./src/index.tsx",
  "types": "./types/index.d.ts",
  "module": "./lib/index.esm.js",
  "exports": {
    ".": "./lib/index.esm.js",
    "./index.css": "./index.css"
  },
  "scripts": {
    "storybook": "storybook dev -c .storybook",
    "build-storybook": "storybook build -c .storybook -o .storybook-static",
    "build": "rm -rf lib/* && rollup -c && npm run types",
    "types": "mkdir -p types && rm -rf types/* && rm -rf lib/stories && mv lib/src/* types/",
    "prettier": "prettier --write './(src|stories)/**/*.+(ts|tsx)'",
    "lint": "eslint '{src,stories}/**/*.*'",
    "tsc": "npx tsc"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/react": "^8.6.12",
    "@storybook/react-webpack5": "^8.6.12",
    "@types/raf": "^3.4.3",
    "@types/react": "^18.x",
    "@types/react-dom": "^18.x",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.40.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "storybook": "^8.6.12",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "focus-trap-react": "^11.0.3",
    "raf": "^3.4.1"
  },
  "keywords": [
    "react",
    "react-time-picker",
    "time-picker",
    "time",
    "picker"
  ]
}
